<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--Подключение стилей-->
    <link rel="stylesheet" href="~/css/Style.css" />
    <title>@ViewBag.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
    <div class="header">
        <img src="~/img/icon.png" />
        <input id="searchInput" class="search" placeholder="Поиск по сайту" value="@ViewBag.SearchString" />
        <button class="btn small" onclick="searchItems()" type="submit">Найти</button>
        <img class="basket" src="~/img/ic-basket.png" />
        <a id="dynamicLink" href="@Url.Action("BasketList", "Items")">Корзина</a>
        <div id="CountItems" class="ItemsCount">0</div>
        <script>
            function searchItems() {
                var searchString = document.getElementById('searchInput').value;
                window.location = "/Items/List?searchString=" + searchString;
            }

            $(document).ready(function () {
                var currentUrl = window.location.href;
                if (currentUrl.includes("BasketList")) {
                    $("#dynamicLink").attr("href", "@Url.Action("List", "Items")");
                    $("#dynamicLink").text("Назад");
                }
            });
        </script>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
