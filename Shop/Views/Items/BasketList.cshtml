﻿@using Shop.Data.ViewModell
@model VMItems

@{
    Layout = "_Layout";
}

<h2>Корзина</h2>

@{
    foreach (var item in Model.ItemsBaskets)
    {
        <div class="item">
            <img src="@item.Img" />
            <div class="data">
                <h3>Модель: @item.Name</h3>
                <p>Цена: @item.Price.ToString("c")</p>
                <p>Количество: @item.Count</p>
                <div>Описание: @item.Description</div>
            </div>
        </div>
    }
}